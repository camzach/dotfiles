@define-color mauve {{ .color.primary.base }};
@define-color lavender {{ .color.success.base }};

@define-color base alpha({{ .color.background }}, 0.1);
@define-color surface alpha({{ .color.surface.container }}, 0.5);
@define-color text {{ .color.text.base }};
@define-color hoverBg alpha(@mauve, 1);
@define-color hoverFg {{ .color.background }};
@define-color activeBg alpha(@mauve, 1);
@define-color activeFg {{ .color.background }};
@define-color shadow alpha(@lavender, 0.25);

* {
  all: unset;
  font-size: 1rem;
  font-weight: 900;
  font-family:
    JetBrainsMonoNerdFont,
    Font Awesome,
    Roboto,
    Helvetica,
    Arial,
    sans-serif;
  background-clip: border-box;
}

button {
  min-width: 32px;
  min-height: 32px;
  border-radius: 999px;
  color: @text;
  box-shadow: 0px 0px 8px 4px @shadow inset;
  transition:
    all 50ms cubic-bezier(0.55, 0, 0.28, 1.682),
    box-shadow 50ms ease-in-out,
    background-color 200ms ease-in-out;
}

button:hover {
  color: @hoverFg;
  background: @hoverBg;
}

button.active {
  color: @activeFg;
  background: @activeBg;
}

tooltip {
  opacity: 1;
  background-color: @surface;
  border: 3px solid @shadow;
  border-radius: 5%;
}

window#waybar.empty #window {
  background-color: transparent;
}

#window {
  margin-right: 8px;
}

#workspaces,
#hardware,
#clock {
  background-color: @surface;
  border-radius: 999px;
  box-shadow: 0px 0px 8px 4px @shadow inset;
}

#hardware,
#clock {
  padding: 0 8px;
}

#cpu,
#memory,
#disk {
  padding-right: 0.5rem;
}

#workspaces button {
  margin-right: 2px;
}
#workspaces button:last-child {
  margin-right: 0;
}

#network {
  transition: 300ms;
}

