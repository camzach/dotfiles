$font = JetBrainsMono Nerd Font

# GENERAL
general {
  hide_cursor = true
  immediate_render = true
}

# BACKGROUND
background {
  path = /tmp/hyprlock/glitched.png
  reload_time = 2
  reload_cmd = "$XDG_CONFIG_HOME/hypr/hypr-bg/regen-bg.sh"
  blur_passes = 0
}

# LAYOUT
label {
  text = Layout: $LAYOUT
  color = {{ .color.text.base }}
  font_size = 25
  font_family = $font
  position = 30, -30
  halign = left
  valign = top
}

# TIME
label {
  text = $TIME
  color = {{ .color.text.base }}
  font_size = 90
  font_family = $font
  position = -30, 0
  halign = right
  valign = top
}

# DATE
label {
  text = cmd[update:43200000] date +"%A, %d %B %Y"
  color = {{ .color.text.base }}
  font_size = 25
  font_family = $font
  position = -30, -150
  halign = right
  valign = top
}

# USER AVATAR (uncomment when you have a valid image)
image {
  path = $HOME/.face
  size = 100
  border_color = {{ .color.primary.base }}
  position = 0, 75
  halign = center
  valign = center
}

# INPUT FIELD
input-field {
  size = 300, 60
  outline_thickness = 4
  dots_size = 0.2
  dots_spacing = 0.2
  dots_center = true
  outer_color = {{ .color.primary.base }}
  inner_color = {{ .color.background }}
  font_color = {{ .color.text.base }}
  fade_on_empty = false
  placeholder_text = <i>ó°Œ¾ Logged in as </i>$USER
  hide_input = false
  check_color = {{ .color.success.base }}
  fail_color = {{ .color.error.base }}
  fail_text = <i>FAIL <b>($ATTEMPTS)</b></i>
  halign = center
  valign = center
}
